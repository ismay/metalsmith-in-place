{
  "author": "ismay",
  "description": "A metalsmith plugin for in-place templating.",
  "license": "MIT",
  "main": "dist/index.js",
  "name": "metalsmith-in-place",
  "repository": "git://github.com/ismay/metalsmith-in-place.git",
  "version": "4.0.0-alpha.2",
  "scripts": {
    "prepublishOnly": "babel lib -d dist --ignore '**/*.test.js'",
    "precommit": "lint-staged",
    "lint:js": "eslint '{lib,test}/**/*.js'",
    "lint:prettier": "prettier --list-different --print-width 100 --tab-width 2 --no-semi --single-quote '{lib,test}/**/*.js'",
    "lint:whitespace": "lintspaces -e ./.editorconfig -i 'js-comments' '{lib,test}/**/*.js'",
    "test": "jest",
    "test:coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/*.js"
    ]
  },
  "greenkeeper": {
    "ignore": [
      "eslint",
      "eslint-plugin-import"
    ]
  },
  "devDependencies": {
    "assert-dir-equal": "^1.1.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.4.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.13.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "jstransformer-handlebars": "^1.0.0",
    "jstransformer-marked": "^1.0.2",
    "lint-staged": "^6.0.0",
    "lintspaces-cli": "^0.6.0",
    "metalsmith": "^2.1.0",
    "prettier": "^1.9.2",
    "rimraf": "^2.5.3"
  },
  "dependencies": {
    "inputformat-to-jstransformer": "^1.2.1",
    "is-utf8": "^0.2.1",
    "jstransformer": "^1.0.0",
    "multimatch": "^2.1.0"
  }
}
